{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="form-signin text-center">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 alert alert-info">
                You are logged in as <strong>{{ app.user.userIdentifier }}</strong>,
                <a href="{{ path('app_logout') }}" class="text-danger">Logout</a>
            </div>
        {% endif %}

        <img class="mb-4" src="https://www.wiseteam.eu/wp-content/themes/wiseteam/images/wiseteam_logo.png" alt="Logo">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input type="text" value="{{ last_username }}" name="_username" id="username"
                   class="form-control" placeholder="Username" autocomplete="username" required autofocus>
            <label for="username">Username</label>
        </div>

        <div class="form-floating">
            <input type="password" name="_password" id="password" class="form-control"
                   placeholder="Password" autocomplete="current-password" required>
            <label for="password">Password</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>        
    </form>
</main>
{% endblock %}
